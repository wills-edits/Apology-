  <!-- JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
  <script>
    // Particles background
    particlesJS('particles', {
      particles: {
        number: { value: 80 },
        color: { value: '#ff69b4' },
        shape: { type: 'circle' },
        opacity: { value: 0.5, random: true },
        size: { value: 3, random: true },
        line_linked: { enable: false },
        move: { enable: true, speed: 1, direction: 'none', random: true }
      },
      interactivity: { detect_on: 'canvas', events: { onhover: { enable: true, mode: 'repulse' } } },
      retina_detect: true
    });

    function revealMessage() {
      document.getElementById('hero').classList.add('hidden');
      document.getElementById('message').classList.remove('hidden');
      createHearts(40);
      setTimeout(() => document.querySelector('#message .fade-in').classList.add('visible'), 300);
    }

    function revealForever() {
      document.getElementById('message').classList.add('hidden');
      document.getElementById('forever').classList.remove('hidden');
      createHearts(60);
      setTimeout(() => document.querySelector('#forever .fade-in').classList.add('visible'), 300);
    }

    function createHearts(count) {
      for (let i = 0; i < count; i++) {
        setTimeout(() => {
          const heart = document.createElement("div");
          heart.className = "floating-heart fa-solid fa-heart";
          heart.style.left = Math.random() * window.innerWidth + "px";
          heart.style.animationDuration = (Math.random() * 3 + 4) + "s";
          document.body.appendChild(heart);

          setTimeout(() => heart.remove(), 6000);
        }, i * 100);
      }
    }
  </script>
